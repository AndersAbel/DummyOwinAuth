
@{
    ViewBag.Title = "Secret";
}

<h2>Secret Page</h2>
This page is secret and is only viewable for authorized users.

<h3>Claims</h3>
<table>
    <thead>
        <tr>
            <th>Type</th>
            <th>Value</th>
            <th>Issuer</th>
            <th>OriginalIssuer</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var claim in System.Security.Claims.ClaimsPrincipal.Current.Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
                <td>@claim.Issuer</td>
                <td>@claim.OriginalIssuer</td>
            </tr>
        }
    </tbody>
</table>

